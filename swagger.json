{
  "openapi": "3.0",
  "info": {
    "title":"Meteo Robbery",
    "version" : "1.0.0"
  },
  "description":"This is a service for get and create bike robberies.",
  "servers":[
    {
      "url":"localhost:3100",
      "description":"Development Server"
    }],
  "components": {
    "schemas":{
      "Robbery":{
        "type":"object",
        "properties":{
          "latitude":{
            "type":"number",
            "format":"float"
          },
          "longitude":{
            "type":"number",
            "format":"float"
          },
          "date": {
            "type":"string",
            "format" : "date"
          },
          "description": {
            "type":"string"
          }
        }
      }
    }
  },
  "paths":{
    "/robberies":{
      "get": {
        "description":"Return the list of robberies saved by the app.",
        "response":{
          "200":{
            "description":"List of robberies",
            "content":{
              "application/json":{
                "schema":{
                  "type":"array",
                  "items":{
                    "$ref":"#components/schema/robbery"
                  }
                }
              }
            }
          }
        }
      }
    }

  }
}